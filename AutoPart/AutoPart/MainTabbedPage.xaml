<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AutoPart.MainTabbedPage"
             x:Name="MyTabbedPage">
    <ContentPage x:Name="myContentPage" Title="Names and Prices">
        <StackLayout x:Name="stack">
            <Entry x:Name="entrySearch" Placeholder="Search" TextChanged="GetResultSearch"></Entry>
            <ListView x:Name="listview"
                HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Vertical"
                                             Margin="5,0,5,0">
                                    <Label Text="{Binding Name}" FontAttributes="None" />
                                    <Label Text="{Binding Price}" TextColor = "Teal" Padding="10,0,0,0"/>
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage>
    <!--Pages can be added as references or inline-->


</TabbedPage>